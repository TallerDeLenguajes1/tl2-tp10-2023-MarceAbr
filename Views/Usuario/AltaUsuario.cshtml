@using tl2_tp10_2023_MarceAbr.Models

@model Usuario

<h1>@ViewData["Crear Usuario"]</h1>
<form asp-controller="Usuario" asp-action="CrearUsuario" method="post">
    <div class="form-group">
        <label asp-for="@Model.Id"></label>
        <input asp-for="@Model.Id" class="form-control" id="id" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.NombreDeUsuario"></label>
        <input asp-for="@Model.NombreDeUsuario" class="form-control" id="nombre" />
    </div>
    <button type="submit" class="btn btn-primary" >Enviar</button>
</form>