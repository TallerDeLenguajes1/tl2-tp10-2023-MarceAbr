@using tl2_tp10_2023_MarceAbr.Models

@model List<Usuario>

<table>
    <thead>
        <tr>
            <th>Id </th>
            <th>Nombre</th>
        </tr>
    </thead>

    <tbody>
        @foreach(Usuario usu in @Model)
        {
        <tr>
            <td>@usu.Id</td>
            <td>@usu.NombreDeUsuario</td>
            <td><a asp-controller="Usuario" asp-action="ModificarUsuario" asp-route-idUsuario="@usu.Id">Modificar</a></td>
            <td><a asp-controller="Usuario" asp-action="EliminarUsuario" asp-route-idUsuario="@usu.Id">Eliminar</a></td>
        </tr>
        }
        <tr>
            <td><a asp-controller="Usuario" asp-action="CrearUsuario">Crear Usuario</a></td>
        </tr>
    </tbody>
</table>