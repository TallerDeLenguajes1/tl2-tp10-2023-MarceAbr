@using tl2_tp10_2023_MarceAbr.Models

@model CrearTareaViewModel

<h1>@ViewData["Crear Tarea"]</h1>
<form asp-controller="Tarea" asp-action="AltaTarea" method="post">
    <div class="form-group">
        <label asp-for="@Model.IdTablero"></label>
        <input asp-for="@Model.IdTablero" class="form-control" id="idTablero" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nombre"></label>
        <input asp-for="@Model.Nombre" class="form-control" id="nombre" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion"></label>
        <input asp-for="@Model.Descripcion" class="form-control" id="descripcion" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Color"></label>
        <input asp-for="@Model.Color" class="form-control" id="color" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.EstadoTarea"></label>
        <input asp-for="@Model.EstadoTarea" class="form-control" id="estado" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.IdUsuarioAsignado"></label>
        <input asp-for="@Model.IdUsuarioAsignado" class="form-control" id="usuAsignado" />
    </div>
    <button type="submit" class="form-control" class="btn btn-primary" >Enviar</button>
    <button><a asp-controller="Tarea" class="form-control" asp-action="ListarTareas">Cancelar</a></button>
</form>

@section Scripts {<partial name="_ValidationScriptsPartial"/>}